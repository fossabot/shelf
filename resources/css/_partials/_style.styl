// General
html,body
	font-size: 100%

// Section Title
.section-title
	background: purple
	padding: 1em
	h2
		color: white
		margin: 0
	a
		color: white
		&:hover
			text-decoration: none

// Section Content
.section-content
	padding: 1em
	h3
		margin: 0

a
	color: #000
	&:link
		text-decoration: none
	&:hover, &:active
		text-decoration: underline

// Global Classes
.isoDate
	display: none

.addMore,
.removeRow
	&:hover
		cursor: pointer

// Component-specific
ul.series,
ul.issues
	padding: 0
	list-style-type: none
	li
		padding: .5rem 1rem

ul.series
	li
		display: flex
		justify-content: space-between

ul.issues
	li
		a
			display: block
			display: flex
			justify-content: space-between
